cd # by default, use the home directory
mkdir -p unifi/data
mkdir -p unifi/log

docker run -d --init \
   --restart=unless-stopped \
   -p 8080:8080 -p 8443:8443 -p 3478:3478/udp \
   -e TZ='Africa/Johannesburg' \
   -v ~/unifi:/unifi \
   --user unifi \
   --name unifi \
   jacobalberty/unifi
   
docker stop unifi
docker rm unifi / docker rmi unifi
